{
  "manifest_version": 2,
  "name": "E2E Test Builder",
  "description": "This extension allows you to record clicks and perform various assertions. Supports well known Selenium ide test cases",
  "version": "{{package.version}}",
  "browser_action": {
    "default_icon": "assets/icon.png"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "run_at": "document_start",
      "js": ["content.js"]
    }
  ],
  "permissions": [
    "tabs",
    "contextMenus",
    "nativeMessaging"
  ]
}