{
  "manifest_version": 2,

  "name": "E2E Recorder",
  "description": "This extension allows you to record clicks and perform various assertions. This ",
  "version": "1.0",
  "browser_action": {
    "default_icon": "assets/icon.png"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "run_at": "document_start",
      "js": ["content.js"]
    }
  ],
  "permissions": [
    "activeTab",
    "contextMenus"
  ]
}